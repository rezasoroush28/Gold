@model GoldProposalValueModel
@using System.Text;
<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            @T("Plugins.Widgets.B2CGold.GoldProposalValue")
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <nop-label asp-for="ValueTitle" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="ValueTitle" />
                <span asp-validation-for="ValueTitle"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <nop-label asp-for="ValueDescription" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="ValueDescription" />
                <span asp-validation-for="ValueDescription"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <nop-label asp-for="IconPath" />
            </div>
            <div class="col-md-9">
                <img src=@Model.IconPath style="width: 30px; height: 30px;" />
                <input type="file" asp-for="UploadedIcon" accept=".svg" />
                <span asp-validation-for="UploadedIcon"></span>
            </div>
        </div>
    </div>
</div>
